<h1>All Patients</h1>

<% if current_user.receptionist? %>
  <%= link_to "New Patient", new_patient_path %>
<% end %>

<ul>
  <% @patients.each do |patient| %>
    <li>
      <%= link_to patient.name, patient_path(patient) %>
      (<%= patient.age %> yrs) â€” <%= patient.disease %>

      <% if current_user.receptionist? %>
        | <%= link_to "Edit", edit_patient_path(patient) %>
      <%= button_to "Delete", patient_path(patient), method: :delete, data: { confirm: "Are you sure?" }, form: { style: "display:inline" } %>
      <% end %>
    </li>
  <% end %>
</ul>
